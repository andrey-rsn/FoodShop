@model IEnumerable<FoodShop.Web.Models.ProductDTO>

<br /><br />
<div class="container p-4 border">
    <div class ="row pb-2">
        <div class ="col">
            <h1 class ="text-primary">Список продуктов</h1>
        </div>
        <div class ="col text-end pt-1">
            <a asp-action ="ProductCreate" class ="btn btn-outline-primary"><i class= "fas fa-plus"></i>Создать новый продукт</a> 
        </div>
    </div>
    <table class ="table">
        <thead>
            <tr>
                <th>
                    Название
                </th>
                <th>
                    Название категории
                </th>
                <th>
                    Стоимость
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var i in Model)
            {
                <tr>
                    <td>
                        @i.Name
                    </td>
                    <td>
                        @i.CategoryName
                    </td>
                    <td>
                        @((i.Price).ToString("c"))
                    </td>
                    <td>
                        <a asp-action ="ProductEdit" class="btn btn-success" asp-route-productId="@i.ProductId">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action ="ProductDelete" class="btn btn-danger" asp-route-productId="@i.ProductId">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>